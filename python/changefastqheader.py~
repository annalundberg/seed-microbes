#! /usr/bin/env python3

import sys


def main():
    counter = 1
    fastqfile = open(sys.argv[1], 'r')
    newfile = open(sys.argv[2], 'w')
    for line in fastqfile:
        if counter > 4:
            counter = 1
        if line[0] == '@' and counter == 1:
            line =  line[:-3]+'\n'
        newfile.write(line)
        counter = counter + 1  
    newfile.close()
    fastqfile.close()       
        

if __name__ == "__main__":
    main()        
